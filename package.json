{
  "name": "nintendo-nfs",
  "version": "0.1.1",
  "description": "A high-graphics, feature-rich classic Need for Speed game reimagined in Nintendo's iconic style",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "node build.config.js",
    "build:dev": "NODE_ENV=development node build.config.js",
    "build:prod": "NODE_ENV=production node build.config.js",
    "build:all": "npm run build:dev && npm run build:prod",
    "deploy": "node deploy.config.js",
    "deploy:staging": "NODE_ENV=staging node deploy.config.js",
    "deploy:production": "NODE_ENV=production node deploy.config.js",
    "version": "node -p \"require('./package.json').version\"",
    "version:patch": "node version.js patch",
    "version:minor": "node version.js minor",
    "version:major": "node version.js major",
    "version:info": "node version.js info",
    "release:patch": "npm run version:patch && npm run build:prod",
    "release:minor": "npm run version:minor && npm run build:prod",
    "release:major": "npm run version:major && npm run build:prod",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo 'Tests not configured yet'"
  },
  "keywords": [
    "game",
    "racing",
    "nintendo",
    "need-for-speed",
    "pixel-art",
    "retro"
  ],
  "author": "ammarasad2005",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/ammarasad2005/nintendo-nfs.git"
  },
  "bugs": {
    "url": "https://github.com/ammarasad2005/nintendo-nfs/issues"
  },
  "homepage": "https://github.com/ammarasad2005/nintendo-nfs#readme"
}
